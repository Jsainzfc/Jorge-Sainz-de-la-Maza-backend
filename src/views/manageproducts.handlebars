<h1 class="center-text">Lista de productos:</h1>
<span style="display:none" aria-hidden="true" data-cart="{{user.cart}}" id="cart_id"></span>
<a class="button" style="width: auto; font-weight: 600;" href="http://localhost:8080/addproducts">Add new product</a>
<ul class="products container">
    {{#each products}}
    <li class='product flex__col flex--center' data-id="{{this._id}}">
        <a href="/buyproduct/{{this._id}}" class="flex__col product__info">
            {{#if this.thumbnails}}
            <img class='product__info--img' alt='Imagen de producto de {{this.title}}' src='{{this.thumbnails.[0]}}' />
            {{else}}
            <img class='product__info--img' alt='Imagen de producto de {{this.title}}' src='https://cdn2.vectorstock.com/i/1000x1000/81/56/empty-icon-on-white-background-simple-element-vector-28228156.jpg' />
            {{/if}}
            <p class='product__info--title'>{{this.title}}</p>
            <p class='product__info--price' >{{this.price}}â‚¬</p>
        </a>
        <div class="itemCount flex flex--center">
            <a class="button" style="text-align: center; font-family: 'Arial', sans-serif" href="http://localhost:8080/editProduct/{{this._id}}">Edit</a>
            <button id="{{this._id}}" class="remove">Remove</button>
        </div>
    </li>
    {{/each}}
</ul>
{{#if pagination}}
<div class="pagination">
    {{#if hasPrevPage}}
    <a href="{{prevLink}}" class="button pagination-button pagination-prev">Prev Page</a>
    {{/if}}
    {{#if hasNextPage}}
    <a href="{{nextLink}}" class="button pagination-button pagination-next">Next Page</a>
    {{/if}}
</div>
{{/if}}
<script src="/static/js/manageProducts.js"></script>
